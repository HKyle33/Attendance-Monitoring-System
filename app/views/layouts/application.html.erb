<!DOCTYPE html>
<html>
  <head>
    <title>AttendanceMonitoringSystem</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= render partial: 'layouts/navbar' %>
    <% if teacher_signed_in? %>
    <p>Hello, <%= current_teacher.first_name %> - <%=link_to "Sign_out", destroy_teacher_session_path, :method => 'delete' %></p>
    <% elsif student_signed_in? %>
    <p>Hello, <%= current_student.first_name %> - <%=link_to "Sign_out", destroy_student_session_path, :method => 'delete' %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
